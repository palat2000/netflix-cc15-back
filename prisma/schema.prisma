// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int              @id @default(autoincrement())
  firstName      String?
  lastName       String?
  email          String           @unique
  password       String
  birthMonth     Int?
  birthDate      Int?
  isActive       Boolean          @default(false)
  mobile         String?          @unique
  activeAt       DateTime?
  expiredDate    DateTime?
  customerId     String?
  subscriptionId String?
  paymentHistory PaymentHistory[]
  userAccount    UserProfile[]
}

model PaymentHistory {
  id          Int       @id @default(autoincrement())
  paymentDate DateTime?
  transaction String?
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
}

model UserProfile {
  id              Int           @id @default(autoincrement())
  profileImageUrl String?
  userProfileName String
  isKid           Boolean       @default(false)
  favoriteGenres  GenresSelect?
  user            User          @relation(fields: [userId], references: [id])
  userId          Int
  myList          MyList[]
  history         History[]
}

model History {
  id            Int          @id @default(autoincrement())
  Movie         Movie?       @relation(fields: [movieId], references: [id])
  movieId       Int?
  enumGenres    GenresSelect
  userProfileId Int
  UserProfile   UserProfile  @relation(fields: [userProfileId], references: [id])
}

model MyList {
  id            Int          @id @default(autoincrement())
  UserProfile   UserProfile? @relation(fields: [userAccountId], references: [id])
  userAccountId Int?
  movieId       Int
  Movie         Movie        @relation(fields: [movieId], references: [id])
}

model Movie {
  id             Int           @id @default(autoincrement())
  title          String
  release_year   DateTime?
  count_watching Int?
  count_liked    Int?
  detail         String?
  isTVShow       Boolean       @default(false)
  image          String?
  trailer        String?
  enumGenres     GenresSelect? @default(ACTION)
  myList         MyList[]
  history        History[]
  actor          Actors[]
  video          Video[]
}

model Actors {
  id      Int    @id @default(autoincrement())
  name    String
  Movie   Movie? @relation(fields: [movieId], references: [id])
  movieId Int?
}

model Video {
  id               Int    @id @default(autoincrement())
  videoEpisodeName Int    @default(1)
  videoUrl         String
  Movie            Movie? @relation(fields: [movieId], references: [id])
  movieId          Int?
}

model Admin {
  id       Int      @id @default(autoincrement())
  username String
  password String
  createAt DateTime
}

enum GenresSelect {
  COMEDIES
  ACTION
  HORROR
  SPORTS
  KID
  ROMANCE
}
