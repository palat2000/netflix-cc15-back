// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int              @id @default(autoincrement())
  firstName      String?
  lastName       String?
  email          String           @unique
  password       String
  birthMonth     Int?
  birthDate      Int?
  isActive       Boolean          @default(false)
  mobile         String?          @unique
  activeAt       DateTime?
  expiredDate    DateTime?
  subscriptionId String?
  customerId     String?
  paymentHistory PaymentHistory[]
  userAccount    UserProfile[]
}

model PaymentHistory {
  id          Int       @id @default(autoincrement())
  paymentDate DateTime?
  transaction String?
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
}

model UserProfile {
  id              Int           @id @default(autoincrement())
  profileImageUrl String?
  userProfileName String
  isKid           Boolean       @default(false)
  favoriteGenres  GenresSelect?
  user            User          @relation(fields: [userId], references: [id])
  userId          Int
  myList          MyList[]
  history         History[]
}

model History {
  id             Int         @id @default(autoincrement())
  userProfile    UserProfile @relation(fields: [userProfileId], references: [id])
  userProfileId  Int
  video          Video?      @relation(fields: [videoId], references: [id])
  videoId        Int?
  recentWatching String?
}

model MyList {
  id            Int          @id @default(autoincrement())
  userProfile   UserProfile? @relation(fields: [userProfileId], references: [id])
  userProfileId Int?
  movieId       Int
  movie         Movie        @relation(fields: [movieId], references: [id])
}

model Movie {
  id             Int           @id @default(autoincrement())
  title          String
  release_year   String        @db.VarChar(7)
  count_watching Int?
  count_liked    Int?
  detail         String?
  isTVShow       Boolean       @default(false)
  image          String?
  trailer        String?
  enumGenres     GenresSelect? @default(ACTION)
  myList         MyList[]

  video      Video[]
  actorMovie ActorMovie[]
}

model Actors {
  id         Int          @id @default(autoincrement())
  name       String
  actorMovie ActorMovie[]
}

model ActorMovie {
  id       Int     @id @default(autoincrement())
  actors   Actors? @relation(fields: [actorsId], references: [id])
  actorsId Int?
  movie    Movie?  @relation(fields: [movieId], references: [id])
  movieId  Int?
}

model Video {
  id               Int       @id @default(autoincrement())
  videoEpisodeNo   Int       @default(1)
  videoEpisodeName String
  videoUrl         String
  movie            Movie?    @relation(fields: [movieId], references: [id])
  movieId          Int?
  history          History[]
}

model Admin {
  id       Int      @id @default(autoincrement())
  username String
  password String
  createAt DateTime
}

enum GenresSelect {
  COMEDIES
  ACTION
  HORROR
  SPORTS
  KID
  ROMANCE
}
